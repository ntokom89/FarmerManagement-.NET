
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

<div>
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back To List</a>
</div>

<div>
    <form>
        <div class="form-group">
            <label for="UserIDInput">User ID</label>
            <input type="text" class="form-control" id="UserIDInput" aria-describedby="emailHelp" placeholder="Enter email" name="UserIDInput">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="EmailInput">Email</label>
            <input type="text" class="form-control" id="EmailInput" aria-describedby="emailHelp" placeholder="Enter email" name="EmailInput">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" class="form-control" id="Password" placeholder="Password" name="PasswordRegister">
        </div>
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" placeholder="Name" name="NameInput">
        </div>
        <div class="form-group">
            <label for="Surname">Surname</label>
            <input type="text" class="form-control" id="Surname" placeholder="Surname" name="SurnameInput">
        </div>
        <div class="form-group">
            <label for="Surname">Surname</label>
            <input type="text" class="form-control" id="Surname" placeholder="Surname" name="SurnameInput">
        </div>
    </form>


</div>