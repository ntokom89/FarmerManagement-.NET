@model IEnumerable<PROG7311_Task_2.Models.Product>

@{
    ViewBag.Title = "ProductsListFarmer";
}

<h2>ProductsListFarmer</h2>
<div class="btn btn-default spanlink">@Html.ActionLink("Add Product", "addProduct", "Farmer", new { })</div>
<div class="btn btn-default spanlink">@Html.ActionLink("Back to main page", "FarmerMainPage", "Farmer", new { })</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductDescription)
        </th>
        @*
        <th>
            @Html.DisplayNameFor(model => model.DateAddedProduct)
        </th>
        *@
        <th>
            @Html.DisplayNameFor(model => model.ProductType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductPrice)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.ProductId)
            </th>
            <th>
                @{
                    var base64 = Convert.ToBase64String(item.ProductImage);
                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                }
                <img src='@imgSrc' style="max-width:100px; max-height:100px;" />
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.ProductName)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </th>
            @*
                <th>
                    @Html.DisplayFor(model => model.DateAddedProduct)
                </th>
            *@
            <th>
                @Html.DisplayFor(modelItem => item.ProductType)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.ProductPrice)
            </th>
        </tr>

    }
</table>
